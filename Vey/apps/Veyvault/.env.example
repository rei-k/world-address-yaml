# Veybook Environment Configuration
# Copy this file to .env and fill in your values

# API Configuration
VEY_API_URL=https://api.vey.example.com
VEY_API_KEY=your_api_key_here

# Database
DATABASE_URL=postgresql://user:password@localhost:5432/veybook

# Redis
REDIS_URL=redis://localhost:6379

# Authentication - Google OAuth
OAUTH_GOOGLE_CLIENT_ID=your_google_client_id
OAUTH_GOOGLE_CLIENT_SECRET=your_google_client_secret
OAUTH_GOOGLE_REDIRECT_URI=http://localhost:3000/auth/google/callback

# Authentication - Apple OAuth
OAUTH_APPLE_CLIENT_ID=your_apple_client_id
OAUTH_APPLE_CLIENT_SECRET=your_apple_client_secret
OAUTH_APPLE_REDIRECT_URI=http://localhost:3000/auth/apple/callback

# Authentication - LINE OAuth
OAUTH_LINE_CLIENT_ID=your_line_client_id
OAUTH_LINE_CLIENT_SECRET=your_line_client_secret
OAUTH_LINE_REDIRECT_URI=http://localhost:3000/auth/line/callback

# JWT
JWT_SECRET=your_jwt_secret_here
JWT_EXPIRES_IN=7d

# Encryption
MASTER_KEY=your_master_encryption_key_here

# Next.js
NEXT_PUBLIC_APP_URL=http://localhost:3000
